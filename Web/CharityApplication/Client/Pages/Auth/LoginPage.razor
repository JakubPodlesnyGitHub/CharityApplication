@page "/login"
<MudContainer Fixed=true>
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12">
            <MudForm Model="@LoginModel" @ref="@Form" Validation="@(Validator.ValidateValue)" ValidationDelay="0">
                <MudCard>
                    <MudCardContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="6">
                                <MudTextField Mask="@EmailMask"
                                              Label="Email/Login"
                                              Variant="Variant.Text"
                                              @bind-Value="LoginModel.Email"
                                              InputType="InputType.Text"
                                              For="@(() => LoginModel.Email)" />
                                <MudTextField Label="Password"
                                              Variant="Variant.Text"
                                              @bind-Value="LoginModel.Password"
                                              For="@(() => LoginModel.Password)"
                                              InputType="@PasswordInput"
                                              Adornment="Adornment.End"
                                              AdornmentIcon="@PasswordInputIcon"
                                              OnAdornmentClick="DisplayPassoword"
                                              AdornmentAriaLabel="Show Password" />
                            </MudItem>
                            <MudItem xs="6" Class="d-flex align-center justify-center">
                                <MudPaper Elevation="0" Class="align-center justify-center gap-2">
                                    @*<MudButton Variant="Variant.Filled"
                                               Color=Color.Primary
                                               OnClick="@(() => NavigationManager.NavigateTo("/api/Auth/GoogleLogin",true))"
                                               StartIcon="@Icons.Custom.Brands.Google">Log in with Google</MudButton>*@
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                    <MudCardActions Class="flex-column align-start gap-2">
                            <MudLink OnClick="OpenDialogInvitationLink">Foreget Password ?</MudLink>
                            <MudButton Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Material.Filled.Login"
                                       OnClick="Submit">Login</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudForm>
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudButton Variant="Variant.Filled"
                       Color=Color.Primary
                       OnClick="@(() => NavigationManager.NavigateTo("/accountplan/selection"))"
                       Size="Size.Large">Register</MudButton>
        </MudItem>
    </MudGrid>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" Icon="@Icons.Filled.ArrowCircleUp" />
    </MudScrollToTop>
</MudContainer>

