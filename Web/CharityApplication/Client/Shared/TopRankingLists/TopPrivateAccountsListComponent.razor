<MudList Clickable=@IsClickable Disabled=@IsDisabled>
    <MudListSubheader>
        <MudText Align="Align.Left" Typo="Typo.body1">@ListTitle</MudText>
    </MudListSubheader>
    @if (TopPrivateAccountsWithBadgePoints.Any())
    {
        @foreach (var account in TopPrivateAccountsWithBadgePoints)
        {
            <MudListItem OnClick="@(() => NavigationManager.NavigateTo($"/account/{account.IdAccount}"))" Disabled=@IsDisabled>
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderAvatar>
                            <MudAvatar Image="@account.Base64dataPicture"
                               Color="Color.Secondary">
                                @account.AccountCredentials
                            </MudAvatar>
                        </CardHeaderAvatar>
                        <CardHeaderContent>
                            <MudText>@($"{account.PrivateAccount.FirstName} {account.PrivateAccount.LastName}")</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                    </MudCard>
                </MudListItem>
        }

    }
    else
    {
        <MudChip Color="Color.Error" Icon="@Icons.Material.Filled.Error" Text="There are no provided data" />
    }
</MudList>
